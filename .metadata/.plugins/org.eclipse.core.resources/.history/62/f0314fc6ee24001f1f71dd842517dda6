package app.com.core;

public class Task {
	
	private static int taskId;
	static {
		taskId=0;
	}
	private int taskName;
	private int description;
	private int taskDate;
	private Status status;
	private boolean active;
	
	public Task(int taskName, int description, int taskDate, Status status) {
		super();
		this.taskId=taskId++;
		this.taskName = taskName;
		this.description = description;
		this.taskDate = taskDate;
		this.status = Status.PENDING ;
		this.active=true;
	}

	public static int getTaskId() {
		return taskId;
	}

	public static void setTaskId(int taskId) {
		Task.taskId = taskId;
	}

	public int getTaskName() {
		return taskName;
	}

	public void setTaskName(int taskName) {
		this.taskName = taskName;
	}

	public int getDescription() {
		return description;
	}

	public void setDescription(int description) {
		this.description = description;
	}

	public int getTaskDate() {
		return taskDate;
	}

	public void setTaskDate(int taskDate) {
		this.taskDate = taskDate;
	}

	public Status getStatus() {
		return status;
	}

	public void setStatus(Status status) {
		this.status = status;
	}

	public boolean isActive() {
		return active;
	}

	public void setActive(boolean active) {
		this.active = active;
	}

	@Override
	public String toString() {
		return "Task [taskName=" + taskName + ", description=" + description + ", taskDate=" + taskDate + ", status="
				+ status + ", active=" + active + "]";
	}
	
	

}
