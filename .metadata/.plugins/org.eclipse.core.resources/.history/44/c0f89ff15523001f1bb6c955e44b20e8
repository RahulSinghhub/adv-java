package com.app.utils;

import java.time.LocalDate;
import java.util.List;

import com.app.entities.Brand;
import com.app.entities.Material;
import com.app.entities.Pen;
import com.app.exception.Custom_exception;

/*cjjcb
 * Brand brand;
